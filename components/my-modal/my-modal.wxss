/* components/my-modal/my-modal.wxss */
.my-modal{
	position: fixed;
	top: 0;
	background: rgba(0,0,0,0.1);
	height:100%;
	width:100%;
	display: flex;
	justify-content: center;
	align-items: center;
	transition: all 0.1s ease;
}
.my-modal.hidden{
	transform: scale(0);
	opacity: 0;
	overflow: hidden;
}
.my-modal-inner{
	background: #fff;
	height:40%;
	width:85%;
	display: flex;
	flex-direction: column;
	border-radius: 10px;
}
.title{
	font-size: 25px;
	text-align: center;
	margin-top:10px;

}
.content{
	height: 100%;
}