.bar{
  height: 300px;
  background-color: red;
  position: relative;
}
.userinfo {
  width: 50px;
  position: absolute;
  right: 30px;
  top: 30px;
  display: flex;
  flex-direction: column;
}
.userinfo image{
  width: 50px;
  height: 50px;
  border-radius: 25px;
}
.userinfo text{
  margin: 5px;
  font-size: 10px;
  text-align: center;
}
.card{
  position: absolute;
  top: 120px;
  background-color: yellow;
  width: 90%;
  height: 160px;
  margin-left: 5%;
  border-radius: 10px;
}
.hot{
  padding: 5px;
}
.hot-item{
  display: flex;
  justify-content: space-between;
}
.hot-item-text{
  display: flex;
  flex-direction: column;
  font-size: 14px;
}
.hot-item-name{

}
.hot-item-info{
  color: gray;
}
.hot-actions text{
  font-size: 14px;
  margin-left: 10px;
}