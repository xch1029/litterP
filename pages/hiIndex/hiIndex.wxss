.bar{
  height: 300px;
  background-color: red;
  position: relative;
}
.userinfo {
  width: 50px;
  position: absolute;
  right: 30px;
  top: 30px;
  display: flex;
  flex-direction: column;
}
.userinfo image{
  width: 100%;
  height: 50px;
  border-radius: 25px;
}
.bar>image{
  width: 100%;
  height: 100%;
}
.userinfo text{
  margin: 5px;
  font-size: 10px;
  text-align: center;
}
.card{
  position: absolute;
  top: 120px;
  background-color: yellow;
  width: 90%;
  height: 160px;
  margin-left: 5%;
  border-radius: 10px;
}
.hot{
  padding: 5px;
  border-top:1px solid #ccc;
  border-bottom:1px solid #ccc;
}
.hot-item{
  display: flex;
  justify-content: space-between;
  padding:6px;
}
.hot-item:not(:last-child){
  border-bottom:1px solid #ccc;
}
.hot-item-text{
  display: flex;
  flex-direction: column;
  font-size: 14px;
}
.hot-item-name{
  font-size: 16px;
  margin-bottom:4px;
}
.hot-item-info{
  font-size: 12px;
  color: gray;
}
.hot-actions{
  position: relative;
  top: 4px;
}
.hot-actions text{
  font-size: 14px;
  margin-left: 10px;
}

.search{
  padding: 12px 20px;
  background-color:rgba(200,200,200,0.1);
}
.search-inner{
  display: flex;
  justify-content: space-between;
  border-radius:20px;
  border: 2px solid #b3b342;
  align-items: center;
  padding: 2px 10px;
}
.search-inner input {
  font-size: 14px;
  width: 100%;
}
.tag1{
  border: 1px solid red;
  border-radius:6px;
  padding:1px 4px;
  color: red;
}
.tag2{
  background: #4ba54f;
  padding:2px 7px;

  border-radius: 10px;
  color: #fff;
}

.shop-item{
  display: flex;
  align-items: center;
}
.shop-item>view:first-child{
  width: 80px;
  height: 80px;
}
.shop-item view:first-child image{
  width: 100%;
  height: 100%;
}
.shop-item view:last-child{
  width: calc(100% - 80px);
}
.shop-item view:last-child>view{
  width: 100%;
  font-size: 14px;
  color: #ccc;
  margin: 2px;
}
.shop-name{
  color: #ccc;
}
.shop-tag{
  font-size: 16px;
  color: #000;
}
.shop-price{
  font-size: 16px;
  color: red;
}
