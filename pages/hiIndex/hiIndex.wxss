}

.modal-content{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:space-between;
}
.modal-content input{
  width: 80%;
  border: 1px solid #ccc;
  height:35px;
  margin-top:15px;
}
.modal-content .footer{
  display: flex;
  justify-content: space-around;
  width:100%;
  border-top:1px solid #ccc;
  height: 60px;
}
.modal-content .footer text{
  position: relative;
  width: 50%;
  text-align: center;
  line-height: 60px;
}
.modal-content .footer text:first-child::after{
  position: absolute;
  content: '';
  width:1px;
  height:100%;
  background:#ccc;
  right:0;
}
