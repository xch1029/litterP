.avatar{
	display: flex;
	flex-direction: column;
	align-items:center;
}
.avatar image{
	width: 100px;
	height: 100px;
	border-radius: 50px;
}
.user-info{
	margin: 10px;
}
.user-info > view{
	display: flex;
	justify-content: space-between;
	padding:14px;
	font-size: 14px;
	border-top:1px solid rgba(0,0,0,0.1);
}